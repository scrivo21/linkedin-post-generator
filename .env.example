# LinkedIn Post Generator - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# Discord Bot Configuration
# =============================================================================

# Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord channel IDs (enable Developer Mode in Discord to copy IDs)
DISCORD_APPROVAL_CHANNEL_ID=123456789012345678
DISCORD_NOTIFICATION_CHANNEL_ID=123456789012345678

# Optional: Specific guild/server ID for faster command sync
DISCORD_GUILD_ID=123456789012345678

# Bot configuration
BOT_PREFIX=!
ADMIN_USER_IDS=123456789012345678,987654321098765432

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/linkedin_posts

# Or individual database components
DB_HOST=localhost
DB_PORT=5432
DB_NAME=linkedin_posts
DB_USER=username
DB_PASSWORD=password

# =============================================================================
# LinkedIn API Configuration
# =============================================================================

# LinkedIn app credentials from https://developer.linkedin.com/
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# LinkedIn access token (OAuth 2.0)
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# LinkedIn person ID (optional, for specific user posting)
LINKEDIN_PERSON_ID=your_linkedin_person_id

# =============================================================================
# Optional Integrations
# =============================================================================

# n8n webhook URL for external workflow automation
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/linkedin-posts

# Application webhook URL (for HTML generator integration)
WEBHOOK_URL=http://localhost:5678/webhook/your-webhook-id

# =============================================================================
# System Configuration
# =============================================================================

# Database polling interval in seconds
POLL_INTERVAL=30

# =============================================================================
# Notes
# =============================================================================

# 1. Replace all placeholder values with your actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. Use different values for development/staging/production environments
# 4. Some values are optional and can be left empty if not needed